<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- When user press this button in uncheck state -->
    <item android:state_checked="false" android:state_pressed="true" android:color="#686868" />
<!-- When user press this button in checked state -->
    <item android:state_checked="true" android:state_pressed="true" android:color="#FFFFFF" />
<!-- When user checked this button -->
    <item android:state_checked="true" android:state_pressed="false" android:color="#FFFFFF" />
<!-- Default color -->
    <item android:state_checked="false" android:state_pressed="false" android:color="#686868" />
</selector>