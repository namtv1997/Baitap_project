<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="#d9d5d4"
              android:padding="8dp"
              android:layout_height="match_parent">
    <CheckBox
            android:background="@drawable/drawable_distance_in"
            android:layoutDirection="rtl"
            style="@style/text_view_notification"
            android:text="Updates"/>
    <CheckBox
            android:background="#ffff"
            android:layoutDirection="rtl"
            android:text="andG Alerts"
            style="@style/text_view_notification"/>


    <LinearLayout
            android:layout_marginTop="2dp"
            android:background="#ffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Chat Messages"
                style="@style/text_view_notification"/>
        <TextView
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:text="All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <CheckBox
            android:layout_marginTop="@dimen/common_size_2dp"
            android:background="@drawable/drawable_distance_in_down"
            android:layoutDirection="rtl"
            android:text="Someone check me out"
            style="@style/text_view_notification"/>

</LinearLayout>