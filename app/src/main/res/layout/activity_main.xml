<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerLayout"
        tools:context=".activity.MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include layout="@layout/actionbar"/>

        <FrameLayout
                android:id="@+id/frameLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:padding="4dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/tvRecentReport"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="Recent Report"
                        android:layout_margin="2dp"
                        android:background="@mipmap/menu_recent_report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <ImageView
                        style="@style/MyLine"/>
                <LinearLayout
                        android:id="@+id/tvSearchFriendsMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/item_recent_report"
                            android:drawableLeft="@mipmap/ic_menu_meetpeople"
                            android:text="Search Friends"/>
                </LinearLayout>

                <TextView style="@style/Line"/>
                <TextView
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/ic_menu_buzz"
                        android:text="Check the time line"
                />
                <TextView style="@style/Line"/>
                <TextView
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/ic_menu_lookatme"
                        android:text="Auction"/>
                <TextView style="@style/Line"/>
                <TextView
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/ic_menu_shaketochat"
                        android:text="Shake to chat"
                />
                <TextView style="@style/Line"/>
                <TextView
                        android:textColor="#000"
                        android:paddingLeft="4dp"
                        android:text="q"
                        style="@style/MyLine"/>
                <TextView
                        android:id="@+id/tvProfileMain"
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/ic_menu_myprofile"
                        android:text="Profile"/>
                <TextView style="@style/Line"/>
                <TextView
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/ic_menu_connections"
                        android:text="My friend"/>
                <TextView style="@style/Line"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:drawableLeft="@mipmap/ic_menu_buzz"
                            android:text="Chats"
                            style="@style/item_recent_report"/>
                    <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView android:text="3"
                                  style="@style/text_view_recent_report"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView style="@style/Line"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:drawableLeft="@mipmap/ic_menu_notification"
                            android:text="Notificaions"
                            style="@style/item_recent_report"/>
                    <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView android:text="53"
                                  style="@style/text_view_recent_report"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView style="@style/Line"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:id="@+id/tvPointRecentReport"
                        android:layout_height="wrap_content">
                    <TextView

                            style="@style/item_recent_report"
                            android:drawableLeft="@mipmap/ic_menu_point"
                            android:text="Points"/>
                    <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView android:text="13672"
                                  style="@style/text_view_recent_report"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView style="@style/Line"/>
                <LinearLayout
                        android:id="@+id/tvSettingRecenreport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                <TextView
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/ic_menu_setting"
                        android:text="Setting"/>
                </LinearLayout>
                <TextView style="@style/Line"/>
                <ImageView
                        style="@style/MyLine"/>
                <TextView style="@style/Line"/>
                <TextView
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/icon_left_menu_misc"
                        android:text="free page"/>
                <TextView style="@style/Line"/>
                <TextView
                        style="@style/item_recent_report"
                        android:drawableLeft="@mipmap/icon_left_menu_misc"
                        android:text="JavaScript InterFace"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>